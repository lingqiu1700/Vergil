---
import Header from "../components/navigation.astro";
import "../styles/login.css";
---

<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>注册</title>
</head>
<body>
    <Header />
    
    <div id="app">
        <div class="login-box">
            <h2>新用户注册</h2>
            <form action="#">
                <div class="form-group">
                    <label>账号</label>
                    <input type="text" class="form-control" placeholder="设置账号">
                </div>
                <div class="form-group">
                    <label>邮箱</label>
                    <input type="email" class="form-control" placeholder="输入邮箱">
                </div>
                <div class="form-group">
                    <label>密码</label>
                    <input type="password" class="form-control" placeholder="设置密码">
                </div>
                <button type="submit" class="btn-submit">注册</button>
            </form>
            <div class="links">
                <a href="/login">已有账号？直接登录</a>
            </div>
        </div>
    </div>
</body>
</html>